@{
    ViewData["Title"] = "Game";
}

<div class="row mb-3" id="turn-ctr">
    <span class="col-6" id="current-turn-lbl"></span>
    <button class="col-6 btn btn-primary" id="change-turn-btn">End turn</button>
</div>

<div class="row" id="spymaster-ctr">
    <div class="col-6" id="scores-ctr">
        <span class="rounded-circle red px-2 mx-2" id="red-score-lbl" aria-label="Red: 0" role="img">0</span>
        <span class="rounded-circle blue px-2 mx-2" id="blue-score-lbl" aria-label="Blue: 0" role="img">0</span>
    </div>
    <button class="btn btn-secondary col-6" id="spymaster-btn" onclick="onSpymasterButtonClicked()">Make me a spymaster</button>
</div>

<div class="spymaster-only" id="filter-ctr">
    <span>Filters: </span>
    <div class="btn-toolbar float-right" role="group">
        <button class="btn mx-1" onclick="onFilterClicked(this)" data-id="all">Show all</button>
        <button class="btn mx-1" onclick="onFilterClicked(this)" data-id="red">Show red</button>
        <button class="btn mx-1" onclick="onFilterClicked(this)" data-id="blue">Show blue</button>
    </div>
</div>

<div class="container-fluid my-3 overflow-auto" id="game-board-ctr" tabindex="-1">
    <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>

<div role="log" class="sr-only" id="text-log">

</div>

@section Scripts
{
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/lib/underscore/underscore.js"></script>
    <script src="~/js/underscore.mixins.js" asp-append-version="true"></script>
    <script src="~/js/game.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/game.css" asp-append-version="true" />
}